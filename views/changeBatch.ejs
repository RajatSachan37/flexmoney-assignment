	<body>
		<h1>Change batch for Yoga Classes</h1>
		
		<div id="form">
		<form action="/change-batch?_method=PATCH" method="POST">
			
			<div class="form-group">
				<input class="form-control" type="text" name="username" placeholder="Username" required>
			</div>

			

			<div class="form-group">
				<label> Select new batch: 
				<select name="batch" required>
					<option value="6-7AM">6-7 AM</option>
					<option value="7-8AM">7-8 AM</option>
					<option value="8-9AM">8-9 AM</option>
					<option value="5-6PM">5-6 PM</option>
				</select>
			</label>
			</div>

			<button class="btn btn-block btn-primary">Change batch</button><br/>

			<p>Not enrolled? <a href="/">Click here to enroll</a></p>
			
		</form>
	</div>
